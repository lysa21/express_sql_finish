<%- include("layouts/_nav") -%>

<h1>Modifier une fiche</h1>
<% if(contact){ %>

<form action="/admin/edit/<%= contact.id %>" method="post">

  <div class="form-horizontal">

    <%- include("../layouts/_inputs") -%>

    <div class="form-group row">
      <label class="col-form-label col-sm-2"></label>
      <div class="col-sm-10">
        <input type="submit" value="Modifier" class="btn btn-default btn-warning" />
        <a class="btn btn-outline-dark cancel" href="/admin/contacts">Annuler</a>
      </div>
    </div>

  </div>
</form>
<% } else{ %>
<p>Ce contact n'existe pas</p>
<% } %>
